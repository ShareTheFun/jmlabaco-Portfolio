<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    /* Custom styles for the admin page */
    body {
      font-family: Arial, sans-serif;
      background-color: #fff0f5;
      color: #ff1493;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #ff69b4;
      padding: 20px;
      text-align: center;
    }
    h1 {
      color: #fff;
    }
    .confession {
      margin: 20px;
      background-color: #fff;
      padding: 10px;
      border: 1px solid #ff1493;
      border-radius: 8px;
    }
    .confession button {
      background-color: #ff1493;
      color: #fff;
      border: none;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
    }
    .confession button:hover {
      background-color: #ff69b4;
    }
    .change-password-form {
      margin-top: 30px;
    }
    .change-password-form input {
      padding: 10px;
      margin: 10px;
      border: 1px solid #ff1493;
      border-radius: 5px;
    }
    .change-password-form button {
      background-color: #ff1493;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 20px;
      justify-content: center;
      align-items: center;
      z-index: 1000;
      text-align: center;
      animation: popin 1s ease-in-out;
    }

    .modal-content {
      background-color: #ff1493;
      border-radius: 10px;
      padding: 40px;
      animation: sparkle 1s infinite alternate;
      max-width: 90%;
      margin: auto;
    }

    .modal-content h2 {
      font-size: 3em;
      margin-bottom: 20px;
      color: #fff;
    }

    .modal-content .confession-box {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      color: #ff1493;
      font-size: 1.5em;
      box-shadow: 0px 4px 8px rgba(255, 255, 255, 0.3);
      margin-top: 30px;
      text-align: left;
      line-height: 1.5;
    }

    .close-btn {
      background-color: #ff69b4;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      margin-top: 20px;
      font-size: 1.2em;
      border-radius: 5px;
      color: white;
    }

    .close-btn:hover {
      background-color: #ff1493;
    }

    @keyframes sparkle {
      0% { box-shadow: 0 0 10px rgba(255, 255, 255, 0.8); }
      100% { box-shadow: 0 0 25px rgba(255, 255, 255, 1); }
    }

    @keyframes popin {
      0% { transform: scale(0); }
      100% { transform: scale(1); }
    }
  </style>
</head>
<body>
  <header>
    <h1>Admin Dashboard</h1>
  </header>

  <div class="confessions-list">
    <% if (confessions && confessions.length > 0) { %>
      <% confessions.forEach((confession, index) => { %>
        <div class="confession">
          <p><strong>MY DAY</strong></p>
          <p><strong>Confession <%= index + 1 %>:</strong></p>
          <p><%= confession.data.confession %></p> <!-- Confession text here -->
          <p><small><%= confession.data.timestamp %></small></p>

          <form action="/admin/delete-confession" method="POST" id="delete-form-<%= index %>">
            <input type="hidden" name="confessionFile" value="<%= confession.fileName %>">
            <button type="button" onclick="confirmDelete(<%= index %>)">Delete</button>
          </form>

          <button onclick="openMayDay(<%= index %>)">May Day</button>
        </div>
      <% }); %>
    <% } else { %>
      <p>No confessions found.</p>
    <% } %>
  </div>

  <!-- Modal for May Day -->
  <div id="mayDayModal" class="modal">
    <div class="modal-content">
      <h2>MY DAY</h2>
      <p><strong>Confession <span id="confessionIndex"></span></strong></p>
      <div class="confession-box" id="confessionBox"></div>
      <button class="close-btn" onclick="closeMayDay()">X</button>
    </div>
  </div>

  <script>
    function confirmDelete(index) {
      const confirmDelete = confirm("Are you sure you want to delete this confession?");
      if (confirmDelete) {
        document.getElementById(`delete-form-${index}`).submit();
      }
    }

    function openMayDay(index) {
      const confessionText = document.querySelectorAll('.confession')[index].querySelector('p').textContent;
      document.getElementById("confessionIndex").textContent = index + 1; // Show Confession number
      document.getElementById("confessionBox").textContent = "â€¢ " + confessionText; // Display confession text
      document.getElementById("mayDayModal").style.display = "flex";
    }

    function closeMayDay() {
      document.getElementById("mayDayModal").style.display = "none";
    }
  </script>
</body>
</html>
